@model CVOnWeb.Models.LoginModel
@using (Html.BeginUmbracoForm("LoginUser", "UserManagement", FormMethod.Post, new { id = "userloginform", name = "userloginform" }))
{
    <div class="form-group">
        @Html.ValidationMessageFor(v => v.LoginUserEmailAddress)
        @Html.TextBoxFor(t => t.LoginUserEmailAddress, new { @class = "form-control", autocomplete = "off", placeholder = "Username" })
    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(v => v.LoginUserPassword)
        @Html.PasswordFor(t => t.LoginUserPassword, new { @class = "form-control", autocomplete = "off", placeholder = "Password" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn brand-btn" value="Sign In">Sign In</button>
        <a href="@Model.ForgotPasswordLink" class="forgot-password-link">Forgot Password?</a>
    </div>
    if (TempData.ContainsKey("ErrorMessage"))
    {
        <div class="form-group response-data">
            @TempData.Peek("ErrorMessage")
        </div>
    }
}
